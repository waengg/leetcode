            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Run",
            "dependsOn": ["C/C++: clang++ build active file"],
            "command": "./${}"

        }
    ],
    "version": "2.0.0"
}